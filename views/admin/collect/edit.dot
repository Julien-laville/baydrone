---
layout: ../../layout/admin.dot
---
[[##body:

<form action="/admin/collect/[[= model.id ]]/update" method="POST">
    <label>Site URL</label>
    <input type="text" name="site" value="[[= model.site ]]"/><br>

    <label>URL's csv</label>
    <textarea name="urls">[[= model.urls ]]</textarea><br>

    <h2>Rules</h2>
    <table>
        [[ for(var i = 0; i < 5; i += 1) { ]]
        <tr>
            <td><label>Path</label><input type="text" name="path[]"/></td>
            <td>
                <label>Value</label>
                <select name="value[]">
                    <option value="picture">Picture</option>
                    <option value="price">Price</option>
                    <option value="category">Category</option>
                    <option value="description">Description</option>
                    <option value="specification">Specification</option>
                </select>
            </td>
            [[ } ]]
        </tr>
    </table>

    <input type="submit"/>

</form>

#]]